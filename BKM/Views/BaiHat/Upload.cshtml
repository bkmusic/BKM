@model BKM.Models.BaiHat

@{
    ViewBag.Title = "Upload";
    if (Session["nguoiDung"] == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    { Layout = "~/Views/Shared/_UserLayout.cshtml"; }
}

<html>
<head>
    <title>Tải Mới Bài Hát</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="bootstrap.min.css">
    <script src="jquery.min.js"></script>
    <script src="bootstrap.min.js"></script>
    <link href="style.css" rel="stylesheet" type="text/css">
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<body>
    <div class="container">
        <br>
        <br>
        <div class="tabcontent" id="up-st">

        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form method="post" action="#">
                    <div class="form-group files">
                        @Html.EditorFor(model => model.File, new { htmlAttributes = new { @class = "form-control", type = "File", id = "file", name = "file" } })

                        <div class="button-tailen-click">
                            <label for="file" class="btn btn-primary btn-lg">Hoặc ấn vào nút này để chọn File bài hát</label>
                        </div>

                    </div>
                </form>
            </div>
            @*<div class="col-md-3"></div>
            <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-2">
                    <div class="button-nap">
                        <button id="nap" class="tablink" onclick="openPage('up-main', this, 'purple')">Nạp</button>
                    </div>
                </div>
                <div class="col-md-5"></div>
            </div>*@

        </div><!--upload zone-->

        <div  id="up-main">
            <div class="row">
                <form>
                    <div class="form-group">
                        @Html.EditorFor(model => model.TenBaiHat, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên bài hát" } })
                        @Html.ValidationMessageFor(model => model.TenBaiHat, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="up-theloai">
                                <div class="form-group">
                                    @Html.DropDownList("MaTheLoai", null, htmlAttributes: new { @class = "combobox form-control" })
                                    @Html.ValidationMessageFor(model => model.MaTheLoai, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div><!--Thể loại-->
                        <div class="col-md-4">
                            <div class="up-khuvuc">
                                <div class="form-group">
                                    @Html.DropDownList("MaKhuVuc", null, htmlAttributes: new { @class = "combobox form-control" })
                                    @Html.ValidationMessageFor(model => model.MaKhuVuc, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div><!--Khu vực-->
                        <div class="col-md-4">
                            <div class="up-casi">
                                <div class="form-group">
                                    @Html.DropDownList("MaCaSi", null, htmlAttributes: new { @class = "combobox form-control" })
                                    @Html.ValidationMessageFor(model => model.MaCaSi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div><!--Ca sĩ-->
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", style = "height: 150px;", type = "textarea", placeholder = "Mô tả" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>

                </form>

                <div class="row">

                    <div class="col-md-2">
                        <input type="submit" value="Upload" class="btn btn-primary btn-lg" />
                    </div>
                    <div class="col-md-5"></div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function openPage(pageName, elmnt, color) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablink");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].style.backgroundColor = "";
            }
            document.getElementById(pageName).style.display = "block";
            elmnt.style.backgroundColor = color;
        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();
    </script>
</body>
}
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
