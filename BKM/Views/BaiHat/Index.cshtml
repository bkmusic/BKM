@model IEnumerable<BKM.Models.BaiHat>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenBaiHat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaCaSi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaKhuVuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
