@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenBaiHat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaCaSi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaKhuVuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
