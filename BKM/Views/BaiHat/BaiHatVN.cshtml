@model IEnumerable<BKM.Models.BaiHat>

@{
    ViewBag.Title = "BaiHatVietNam";
}

<h2>Những bài hát Việt Nam hot nhất</h2>

<p>
    @Html.ActionLink("Trang chủ", "Index", "Home")
</p>
<table class="table">
    <tr>
 
        <th>
            @Html.DisplayNameFor(model => model.TheLoai.TenTheLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenBaiHat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhAnh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.TheLoai.TenTheLoai)
            </td>
            <td>
                @Html.ActionLink(item.TenBaiHat, "NgheNhac", "NgheNhac", new { id = item.MaBaiHat }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                <img src="@Url.Content("~/IMAGE/"+item.HinhAnh)" style="height:200px;width:200px;" />

            </td>
            @*<td>
                <audio src="@Url.Content("~/SONG/"+item.File)" controls type="audio/mp3">abcd</audio>
            </td>*@
        </tr>
    }

</table>
