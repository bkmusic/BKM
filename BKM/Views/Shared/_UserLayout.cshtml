@using BKM.Models
@{
    NguoiDung nguoiDung = (NguoiDung)Session["NguoiDung"];
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scpipts/bootstrap.min.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css">
    @RenderSection("scripts", required: false)
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home">
                    <img id="WPht1-k91imgimage" data-type="image" src="https://static.wixstatic.com/media/b2c0a7_61190110c8a269fa6b62cbab21950181.png/v1/fill/w_95,h_99,al_c,lg_1,q_80/b2c0a7_61190110c8a269fa6b62cbab21950181.webp">
                </a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li id="bk">@Html.ActionLink("BÁCH KHOA MUSIC", "Index", "Home")</li>
                    <li>@Html.ActionLink("Trang Chủ", "Index", "Home")</li>
                    <li dropdown="" class="">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">Khu vực<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index","KhuVuc")">Việt Nam</a></li>
                            <li><a href="@Url.Action("Index","KhuVuc")">Âu Mỹ</a></li>
                            <li><a href="@Url.Action("Index","KhuVuc")">Hàn Quốc</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Nhạc Cá Nhân", "Index", "NhacCaNhan")</li>
                    <li>@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Thể loại", "Index", "TheLoai")</li>

                </ul>
                <button class="btn btn-danger navbar-btn">UPLOAD</button>

                
                <ul class="nav navbar-nav navbar-right">
                    <li ><a style="color:white;" href="@Url.Action("Index","NhacCaNhan")">@nguoiDung.TenHienThi</a></li>
                    <li><a href="@Url.Action("DangXuat","NguoiDung")"><span class="glyphicon glyphicon-log-out"></span> Đăng xuất</a></li>
                </ul>

                <!--Thanh công cụ tìm kiếm-->
                @using (Html.BeginForm("TimKiem", "TimKiem", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                {
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Nhập tên bài hát hoặc ca sĩ" name="search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>
    <div id="footer">
        <div id="footerMenu">
            <a href="/Home/Index">TRANG CHỦ</a>
            <a href="/Home/Contact">LIÊN HỆ</a>
            <a href="/Home/Beta">QUẢNG CÁO</a>
            <a href="/Home/GopY">GÓP Ý</a>
            <a href="/Home/Contact">GIỚI THIỆU</a>
            <a href="/Home/Beta">BKM VIP</a>
        </div>
        <div class="rights">
            Designed by:
            <a href="https://www.facebook.com/lam.nguyenthanh.3158652">Nguyễn Thanh Lâm</a>
        </div>
    </div>
</body>
</html>
